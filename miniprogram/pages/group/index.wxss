}
.rightList-list{
    /* width: 550rpx; */
    display: flex;
    flex-wrap: wrap;
}
.rightList-list-product{
    width: 180rpx;
}
.rightList-list image{
    display: block;
    width: 120rpx;
    height: 190rpx;
}