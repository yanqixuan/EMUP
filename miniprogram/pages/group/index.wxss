.left{
    position: absolute;
    width: 200rpx;
    font-size: 34rpx;
}
.scrollLeft{
    height: 1000rpx;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }


.leftList{
    text-align: center;
    align-items: center;
}
.leftList-name{
    padding: 5rpx;
    margin: 15rpx 20rpx;
    background-color: #bfbfbf;
}
.leftList:first-child .leftList-name{
    padding: 0;
    margin: 0;
}
.leftList-list{
    padding: 20rpx;
}

