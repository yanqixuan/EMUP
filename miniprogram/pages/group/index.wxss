.left{
    position: absolute;
    width: 200rpx;
    font-size: 34rpx;
}
.scrollLeft{
    height: 1000rpx;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }


.leftList{
    text-align: center;
    align-items: center;
}
.leftList-name{
    padding: 5rpx;
    margin: 15rpx 20rpx;
    background-color: #bfbfbf;
}
.leftList:first-child .leftList-name{
    padding: 0;
    margin: 0;
}
.leftList-list{
    padding: 20rpx;
}

/* 右侧 */
.right{
    float: right;
    width: 550rpx;
}
.scrollRight{
    padding-left: 20rpx;
    text-align: center;
    height: 1000rpx;
}
.rightList-name{
    padding: 20rpx 0;
    box-sizing: border-box;
    margin-left: -40rpx;
}
.rightList-list{
    display: flex;
    flex-wrap: wrap;
}
.rightList-list-product{
    padding: 20rpx 10rpx;
    align-items: center;
    width: 150rpx;
}
.rightList-list image{
    display: block;
    width: 150rpx;
    height: 200rpx;
}
.product .rightList-list-product image{
    width: 150rpx;
    height: 150rpx;
}

.select{
    background-color: #000;
    color: #FFC03A;
}