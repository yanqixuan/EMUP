Page {
  margin: 0;
  padding: 0;
}

img {
  width: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.header {
  /* height: 240px; */
  width: 100%;
  border-bottom: 20rpx solid #f1f1f1;
}

.swiper {
  height: 240px;
  width: 100%;
}

.header-swiper {
  /* height: 640rpx; */
  height: 100%;
  width: 100%;
}

/* productInfo */

.productInfo-title {
  display: flex;
  margin: 20rpx;
}

.name {
  padding-top: 10rpx;
  flex: .7;
}

.num {
  margin-top: 20rpx;
  right: 0;
  font-size: 70%;
  flex: .3;
}

.productInfo-price {
  display: inline-block;
  padding: 0 5rpx 5rpx 5rpx;
}

.price {
  font-size: 120%;
  color: #F2302F;
}

.oldPrice {
  text-decoration-line: line-through;
  font-size: 70%;
  color: #bfbfbf;
}

/* info */

.info {
  border-bottom: 20rpx solid #f1f1f1;
  width: 100%;
}

.postage {
  border-bottom: 1px solid #f1f1f1;
  padding: 20rpx 20rpx 20rpx 0;
  margin-left: 20rpx;
  font-size: 60%;
  color: #bfbfbf;
}

.server {
  vertical-align: middle;
  display: inline-block;
}

.postage image {
  position: relative;
  transform: translateY(5rpx);
  width: 30rpx;
  height: 30rpx;
}

/* shop */

.shop {
  width: 100%;
  display: flex;
  padding: 20rpx;
  border-bottom: 20rpx solid #f1f1f1;
}
.shop-item {
  display: flex;
  font-size: 90%;
  justify-content: center;
  flex-direction: column;
  padding: 0 20rpx;
}
.shop-introduce{
  font-size: 80%;
}
.shop-in{
  position: relative;
  transform: translateX(120rpx)
}
.shop-img {
  width: 120rpx;
  height: 120rpx;
}

/* evaluate */
.evaluate{
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.evaluate-title{
  color: #bfbfbf;
}
.evaluate-percent{
  font-size: 90%;
  color: #bfbfbf;
}
.evaluate-rate{
  color: gold;
}
/* detail */
.details{
  margin-bottom: 500rpx;
}

/* foot */
.foot{
  height: 130rpx;
  /* line-height: 150rpx; */
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.item{
  /* flex: .6; */
  display: flex;
  flex-direction: row;
}
.foot-item{
  /* flex: 1; */
  font-size:80%;
  /* width: 100rpx; */
  padding: 20rpx;
  /* display: inline-block; */
  text-align: center;
  margin: 0 auto;
}
.foot image{
  display: block;
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
}
.buy{
  flex: 1;
}
.buy-item{
  height: 100%;
  display: flex;
}
.buy-add{
  display: flex;
  align-items:center;
  height: 100%;
  background-color: gold;
  justify-content: center;
  flex: .5;
}
.purchase{
  display: flex;
  align-items:center;
  height: 100%;
  color: #fff;
  background-color: black;
  justify-content: center;
  flex: .5;
}