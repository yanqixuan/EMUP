/* productInfo */
.productInfo-title{
  display: flex;
  margin: 20rpx;
}
.name{
  padding-top: 10rpx;
  flex: .7;
}
.num{
  margin-top: 20rpx;
  right: 0;
  font-size: 70%;
  flex: .3;
}
.productInfo-price{
  display: inline-block;
  padding: 0 5rpx 5rpx 5rpx;
}
.price{
  font-size: 120%;
  color: #F2302F;
}
.oldPrice{
  text-decoration-line: line-through;
  font-size: 60%;
  color: #bfbfbf;
}